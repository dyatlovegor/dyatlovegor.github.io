	 sub matraShortO.dv Chandrabindu.dv by matraShortOChandrabindu.dv;

	 sub matraO.dv Bindu.dv by matraOBindu.dv;
	 sub matraO.dv Chandrabindu.dv by matraOChandrabindu.dv;

	 sub matraAu.dv Bindu.dv by matraAuBindu.dv;
	 sub matraAu.dv Chandrabindu.dv by matraAuChandrabindu.dv;

	 sub Reph.dv Bindu.dv by RephBindu.dv;
	 sub Reph.dv Chandrabindu.dv by RephChandrabindu.dv;


	 sub matraIiReph.dv Bindu.dv by matraIiRephBindu.dv;
	 sub matraIiReph.dv Chandrabindu.dv by matraIiRephChandrabindu.dv;

	 sub matraEReph.dv Bindu.dv by matraERephBindu.dv;
	 sub matraEReph.dv Chandrabindu.dv by matraERephChandrabindu.dv;

	 sub matraAiReph.dv Bindu.dv by matraAiRephBindu.dv;
	 sub matraAiReph.dv Chandrabindu.dv by matraAiRephChandrabindu.dv;

	 sub matraOReph.dv Bindu.dv by matraORephBindu.dv;
	 sub matraOReph.dv Chandrabindu.dv by matraORephChandrabindu.dv;

	 sub matraAuReph.dv Bindu.dv by matraAuRephBindu.dv;
	 sub matraAuReph.dv Chandrabindu.dv by matraAuRephChandrabindu.dv;

	 sub matraAReph.dv Bindu.dv by matraARephBindu.dv;
	 sub matraAReph.dv Chandrabindu.dv by matraARephChandrabindu.dv;

	 sub matraShortEReph.dv Bindu.dv by matraShortERephBindu.dv;
	 sub matraShortEReph.dv Chandrabindu.dv by matraShortERephChandrabindu.dv;

	 sub matraShortOReph.dv Bindu.dv by matraShortORephBindu.dv;
