feature pres { # Pre-base Substitutions


lookup pres4 { # Four-letter conjuncts
	sub KaSsaHalant.dv MaHalant.dv Ya.dv by KaSsaMaYa.dv;
	sub KaHalant.dv SaHalant.dv PaRa.dv by KaSaPaRa.dv;
	sub KaHalant.dv SaHalant.dv PaHalant.dv La.dv by KaSaPaLa.dv;
	sub TaHalant.dv SaHalant.dv NaHalant.dv Ya.dv by TaSaNaYa.dv;
	sub NaHalant.dv PhaHalant.dv LaHalant.dv Ya.dv by NaPhaLaYa.dv;
	sub NaHalant.dv TaRaHalant.dv Ya.dv by NaTaRaYa.dv;
	sub NaHalant.dv SaHalant.dv KaRa.dv by NaSaKaRa.dv;
	sub NaHalant.dv SaHalant.dv MaHalant.dv Ya.dv by NaSaMaYa.dv;
