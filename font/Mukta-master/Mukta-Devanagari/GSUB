feature blws { # Belowbase substitution

lookup blws1 {
	sub Ra.dv matraU.dv by RamatraU.dv;
	sub Ra.dv matraUu.dv by RamatraUu.dv;
	sub Da.dv matraRu.dv by DamatraRu.dv;
	sub Ha.dv matraRu.dv by HamatraRu.dv;
	sub Sha.dv matraRu.dv by ShamatraRu.dv;
	sub KaSsa.dv matraU.dv by KaSsamatraU.dv;
	sub JaNya.dv matraU.dv by JaNyamatraU.dv;
	sub Ka.dv matraLru.dv by KamatraLru.dv;
	sub Ka.dv matraLruu.dv by KamatraLruu.dv;
	sub Pa.dv matraLru.dv by PamatraLru.dv;
	sub Pa.dv matraLruu.dv by PamatraLruu.dv;
} blws1;


lookup blws_Vattumatra {
	sub Vattu.dv matraU.dv by VattumatraU.dv;
	sub Vattu.dv matraUu.dv by VattumatraUu.dv;
	sub Vattu.dv matraRu.dv by VattumatraRu.dv;
	sub Nukta.dv Vattu.dv matraU.dv by NuktaVattumatraU.dv;
	sub Nukta.dv Vattu.dv matraUu.dv by NuktaVattumatraUu.dv;
	sub Nukta.dv Vattu.dv matraRu.dv by NuktaVattumatraRu.dv;
} blws_Vattumatra;


lookup blws_Vertical_Conjuncts {
	sub @Vertical_Conjuncts matraU.dv' by matraUsmall.dv;
	sub @Vertical_Conjuncts matraUu.dv' by matraUusmall.dv;
	sub @Vertical_Conjuncts matraRu.dv' by matraRusmall.dv;
	sub @Vertical_Conjuncts VattumatraU.dv' by VattumatraUsmall.dv;
	sub @Vertical_Conjuncts VattumatraUu.dv' by VattumatraUusmall.dv;
	sub @Vertical_Conjuncts VattumatraRu.dv' by VattumatraRusmall.dv;
} blws_Vertical_Conjuncts;


lookup blws_Vattu_Characters {
	sub TtaRa.dv matraU.dv' by matraUsmall.dv;
	sub TtaRa.dv matraUu.dv' by matraUusmall.dv;
	sub TtaRa.dv matraRu.dv' by matraRusmall.dv;
	sub DdaRa.dv matraU.dv' by matraUsmall.dv;
	sub DdaRa.dv matraUu.dv' by matraUusmall.dv;
	sub DdaRa.dv matraRu.dv' by matraRusmall.dv;
	sub TthaRa.dv matraU.dv' by matraUsmall.dv;
	sub TthaRa.dv matraUu.dv' by matraUusmall.dv;
	sub TthaRa.dv matraRu.dv' by matraRusmall.dv;
	sub DdhaRa.dv matraU.dv' by matraUsmall.dv;
	sub DdhaRa.dv matraUu.dv' by matraUusmall.dv;
	sub DdhaRa.dv matraRu.dv' by matraRusmall.dv;
	sub ChaRa.dv matraU.dv' by matraUsmall.dv;
	sub ChaRa.dv matraUu.dv' by matraUusmall.dv;
	sub ChaRa.dv matraRu.dv' by matraRusmall.dv;
} blws_Vattu_Characters;

} blws;



