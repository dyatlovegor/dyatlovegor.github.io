		sub JaNukta.dv Halant.dv by JaNuktaHalant.dv; 
		sub PhaNukta.dv Halant.dv by PhaNuktaHalant.dv;
		sub NaNukta.dv Halant.dv by NaNuktaHalant.dv;
		sub YaNukta.dv Halant.dv by YaNuktaHalant.dv;
		sub LlaNukta.dv Halant.dv by LlaNuktaHalant.dv;
		sub KaSsa.dv Halant.dv by KaSsaHalant.dv;
		sub JaNya.dv Halant.dv by JaNyaHalant.dv;
} half1;


