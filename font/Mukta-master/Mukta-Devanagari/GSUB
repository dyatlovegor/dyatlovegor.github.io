#--------------------------------------------------------------------

languagesystem DFLT dflt;
languagesystem latn dflt;
languagesystem deva dflt;
languagesystem deva MAR ;
languagesystem deva HIN ;
languagesystem dev2 dflt;
languagesystem dev2 MAR ;
languagesystem dev2 HIN ;


#******************************************************************************

###-------L A T I N-------###

#******************************************************************************


feature onum { # Oldstyle figures
	sub @Numbers by @Oldstyle;
	sub percent by percentoldstyle;
} onum;


#--------------------------------------------------------------------

feature liga { # Standard Ligatures
	sub f f i by ffi;
	sub f f j by f_f_j;
	sub f f l by ffl;
	sub f f by ff;
	sub f i by fi;
	sub f j by f_j;
	sub f l by fl;
} liga;


#--------------------------------------------------------------------


feature dlig { # Discretionary Ligatures
	sub s t by s_t;
	sub c t by c_t;
} dlig;


#--------------------------------------------------------------------


feature smcp { # Small Capitals
	sub @Lowercase by @Small_Caps;
} smcp;


#--------------------------------------------------------------------


feature subs { # Subscript
	sub @Numbers by @Subscript;
	sub parenleft by parenleft.inferior;
	sub parenright by parenright.inferior;
} subs;


#--------------------------------------------------------------------


feature sups { # Superscript
	sub @Numbers by @Superscript;
	sub parenleft by parenleft.superior;
	sub parenright by parenright.superior;
} sups;

#--------------------------------------------------------------------


feature dnom { # Denominator
	sub @Numbers by @Denominator;
} dnom;


#--------------------------------------------------------------------


feature numr { # Numerator
	sub @Numbers by @Numerator;
} numr;


#--------------------------------------------------------------------


feature tnum { # Tabular figures
	sub @Numbers by @Tabular;
	sub @Oldstyle by @Tabular_Old;
} tnum;

#--------------------------------------------------------------------


feature frac { # Fractions Latin and Devanagari

    sub one slash two by onehalf;
    sub one slash four by onequarter;
    sub three slash four by threequarters;

#    sub Ek.dv slash Don.dv by EkslashDon.dv;
#    sub Ek.dv slash Chaar.dv by EkslashChaar.dv;
#    sub Ek.dv slash Teen.dv by EkslashTeen.dv;
#    sub Teen.dv slash Chaar.dv by TeenslashChaar.dv;

} frac;



#******************************************************************************

###-------D E V A N A G A R I-------###

#******************************************************************************


feature locl { # Localized forms
	script dev2;
	language HIN;
		sub Paach.dv by Paanch.dv;
		sub Aath.dv by Aanth.dv;
	language MAR;
		sub Sha.dv by Sha.MAR.dv;
		sub La.dv by La.MAR.dv;

	script deva;
	language HIN;
		sub Paach.dv by Paanch.dv;
		sub Aath.dv by Aanth.dv;
	language MAR;
		sub Sha.dv by Sha.MAR.dv;
		sub La.dv by La.MAR.dv;
} locl;


#--------------------------------------------------------------------

feature nukt { # Nukta consonants

lookup nukt1 {
	sub Ka.dv Nukta.dv by KaNukta.dv;
	sub Kha.dv Nukta.dv by KhaNukta.dv;
	sub Ga.dv Nukta.dv by GaNukta.dv;
	sub Ja.dv Nukta.dv by JaNukta.dv;
	sub Dda.dv Nukta.dv by DdaNukta.dv;
	sub Ddha.dv Nukta.dv by DdhaNukta.dv;
	sub Pha.dv Nukta.dv by PhaNukta.dv;
	sub Ya.dv Nukta.dv by YaNukta.dv;
	sub Na.dv Nukta.dv by NaNukta.dv;
	sub Ra.dv Nukta.dv by RaNukta.dv;
	sub Lla.dv Nukta.dv by LlaNukta.dv;
} nukt1;
} nukt;

#--------------------------------------------------------------------

feature akhn { # Akhanda
	sub Ka.dv Halant.dv Ssa.dv by KaSsa.dv;
	sub Ja.dv Halant.dv Nya.dv by JaNya.dv;
	sub vowelIi.dv Bindu.dv by vowelIiBindu.dv;
	sub vowelIi.dv Chandrabindu.dv by vowelIiChandrabindu.dv;
	sub PaHalant.dv vowelLru.dv by PamatraLru.dv;
	sub PaHalant.dv vowelLruu.dv by PamatraLruu.dv;
	sub KaHalant.dv vowelLru.dv by KamatraLru.dv;
	sub KaHalant.dv vowelLruu.dv by KamatraLruu.dv;
	sub Ra.dv Halant.dv ZWJ by RaNuktaHalant.dv;
} akhn;

