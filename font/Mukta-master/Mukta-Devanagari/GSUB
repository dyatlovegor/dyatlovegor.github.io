feature ss02 { # Stylistic Set 2

lookup salt2 {	
    sub [TaRa.dv TaRaHalant.dv TaRaYa.dv] by [TaRaone.dv TaRaoneHalant.dv TaRaYaone.dv];
    sub [KaRa.dv KaKa.dv KaVa.dv CaCa.dv] by [KaRaone.dv KaKaone.dv KaVaone.dv CaCaone.dv];
    sub [PaTa.dv PaLa.dv LaLa.dv] by [PaTaone.dv PaLaone.dv LaLaone.dv];
} salt2;
	

lookup ss02_1 {
	sub matraItwelve.dv' CaCaone.dv by matraIfour.dv;
	sub matraIfourteen.dv' KaKaone.dv by matraItwo.dv;
	sub matraIfifteen.dv' KaRaone.dv by matraI.dv;
	sub matraIfifteen.dv' KaVaone.dv by matraItwo.dv;
	sub matraIseventeen.dv' LaLaone.dv by matraIthree.dv;
	sub matraIthirteen.dv' PaLaone.dv by matraI.dv;
	sub matraIten.dv' PaTaone.dv by matraIthree.dv;
} ss02_1;

lookup ss02_2 {
	sub [KaRaone.dv KaVaone.dv] @matraIidefault' by @matraIithree;
	sub [LaLaone.dv PaLaone.dv] @matraIidefault' by @matraIitwo;
} ss02_2;

} ss02;	

