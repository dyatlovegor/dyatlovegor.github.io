feature half  {  # Half Forms
	script dev2; 
	language dflt;
	lookup half_rakar {
		 sub KaRa.dv Halant.dv by KaRaHalant.dv;
		 sub GaRa.dv Halant.dv by GaRaHalant.dv;
		 sub GhaRa.dv Halant.dv by GhaRaHalant.dv;
		 sub TaRa.dv Halant.dv by TaRaHalant.dv;
		 sub DaRa.dv Halant.dv by DaRaHalant.dv;
		 sub DhaRa.dv Halant.dv by DhaRaHalant.dv;
		 sub PaRa.dv Halant.dv by PaRaHalant.dv;
		 sub BhaRa.dv Halant.dv by BhaRaHalant.dv;
		 sub VaRa.dv Halant.dv by VaRaHalant.dv;
		 sub ShaRa.dv Halant.dv by ShaRaHalant.dv;
		 sub SsaRa.dv Halant.dv by SsaRaHalant.dv;
		 sub SaRa.dv Halant.dv by SaRaHalant.dv;
		 sub ChaRa.dv Halant.dv by ChaRaHalant.dv;
		 sub DdhaRa.dv Halant.dv by DdhaRaHalant.dv;
} half_rakar;

	lookup half1 {
