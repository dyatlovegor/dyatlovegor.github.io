feature psts { 
script gjr2;
language dflt;

lookup psts3 { # Postbase matra substitutions

	sub @Width_matraIidefault @matraIidefault' by @matraIidefault;
	sub @Width_matraIione @matraIidefault' by @matraIione;
	sub @Width_matraIitwo @matraIidefault' by @matraIitwo;
	sub @Width_matraIithree @matraIidefault' by @matraIithree;
	
	sub @Width_matraIidefault Vattu.gj @matraIidefault' by @matraIidefault;
	sub @Width_matraIione Vattu.gj @matraIidefault' by @matraIione;
	sub @Width_matraIitwo Vattu.gj @matraIidefault' by @matraIitwo;
	sub @Width_matraIithree Vattu.gj @matraIidefault' by @matraIithree;
} psts3;


lookup psts2 {
	sub Ja.gj MatraIi.gj by JaMatraIi.gj;
	sub Ja.gj MatraA.gj by JaMatraAa.gj;
	sub Ja.gj MatraChandraO.gj by JaMatraChandraO.gj;
	sub Ja.gj MatraO.gj by JaMatraO.gj;
	sub Ja.gj MatraAu.gj by JaMatraAu.gj;
	sub Ja.gj MatraOBindu.gj by JaMatraOBindu.gj;
	sub Ja.gj MatraOReph.gj by JaMatraOReph.gj;
	sub Ja.gj MatraORephBindu.gj by JaMatraORephBindu.gj;
	sub Ja.gj MatraORephChandrabindu.gj by JaMatraORephChandrabindu.gj;

	sub Ja.gj MatraAuBindu.gj by JaMatraAuBindu.gj;
	sub Ja.gj MatraAuReph.gj by JaMatraAuReph.gj;
	sub Ja.gj MatraAuRephBindu.gj by JaMatraAuRephBindu.gj;
	sub Ja.gj MatraAuRephChandrabindu.gj by JaMatraAuRephChandrabindu.gj;

} psts2;


script gujr;
language dflt;
lookup psts3;
lookup psts2;

} psts;

