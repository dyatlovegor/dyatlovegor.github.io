feature vatu { # Vattu
	script gujr;
	language dflt;


lookup vatu3 {
		sub NgaKa.gj Vattu.gj' by Vattu1.gj;
		sub NgaKha.gj Vattu.gj' by Vattu1.gj;
		sub NgaGa.gj Vattu.gj' by Vattu1.gj;
		sub NgaGha.gj Vattu.gj' by Vattu1.gj;
		sub NgaNa.gj Vattu.gj' by Vattu1.gj;
		sub NgaMa.gj Vattu.gj' by Vattu1.gj;
		sub NgaYa.gj Vattu.gj' by Vattu1.gj;
		sub NgaVa.gj Vattu.gj' by Vattu1.gj;
		sub TtaTta.gj Vattu.gj' by Vattu1.gj;
		sub TtaTtha.gj Vattu.gj' by Vattu1.gj;
		sub TtaVa.gj Vattu.gj' by Vattu1.gj;
		sub TthaTtha.gj Vattu.gj' by Vattu1.gj;
		sub DdaGa.gj Vattu.gj' by Vattu1.gj;
		sub DdaDda.gj Vattu.gj' by Vattu1.gj;
		sub DdaDdha.gj Vattu.gj' by Vattu1.gj;
		sub DdaNa.gj Vattu.gj' by Vattu1.gj;
		sub DdaVa.gj Vattu.gj' by Vattu1.gj;
		sub DdhaDdha.gj Vattu.gj' by Vattu1.gj;
} vatu3;


	lookup vatu2 {
		sub KaSsa.gj Vattu.gj by KaSsaRa.gj;
} vatu2;


	lookup vatu1 {
		sub Ka.gj Vattu.gj by KaRa.gj;
		sub Kha.gj Vattu.gj by KhaRa.gj;
		sub Ga.gj Vattu.gj by GaRa.gj;
		sub Gha.gj Vattu.gj by GhaRa.gj;
		sub Ca.gj Vattu.gj by CaRa.gj;
		sub Jha.gj Vattu.gj by JhaRa.gj;
		sub Nya.gj Vattu.gj by NyaRa.gj;
		sub Nna.gj Vattu.gj by NnaRa.gj;
		sub Ta.gj Vattu.gj by TaRa.gj;
		sub Tha.gj Vattu.gj by ThaRa.gj;
		sub Da.gj Vattu.gj by DaRa.gj;
		sub Dha.gj Vattu.gj by DhaRa.gj;
		sub Na.gj Vattu.gj by NaRa.gj;
		sub Pa.gj Vattu.gj by PaRa.gj;
		sub Pha.gj Vattu.gj by PhaRa.gj;
		sub Ba.gj Vattu.gj by BaRa.gj;
		sub Bha.gj Vattu.gj by BhaRa.gj;
		sub Ma.gj Vattu.gj by MaRa.gj;
		sub Ya.gj Vattu.gj by YaRa.gj;
		sub La.gj Vattu.gj by LaRa.gj;
		sub Va.gj Vattu.gj by VaRa.gj;
		sub Sha.gj Vattu.gj by ShaRa.gj;
		sub Sa.gj Vattu.gj by SaRa.gj;
		sub Ssa.gj Vattu.gj by SsaRa.gj;
		sub Ha.gj Vattu.gj by HaRa.gj;
		sub Lla.gj Vattu.gj by LlaRa.gj;

} vatu1;



	lookup vatu_half1 {
		sub KaHalf.gj Vattu.gj by KaRaHalf.gj;
		sub GaHalf.gj Vattu.gj by GaRaHalf.gj;
		sub GhaHalf.gj Vattu.gj by GhaRaHalf.gj;
		sub TaHalf.gj Vattu.gj by TaRaHalf.gj;
		sub DhaHalf.gj Vattu.gj by DhaRaHalf.gj;
		sub PaHalf.gj Vattu.gj by PaRaHalf.gj;
		sub BhaHalf.gj Vattu.gj by BhaRaHalf.gj;
		sub VaHalf.gj Vattu.gj by VaRaHalf.gj;
		sub ShaHalf.gj Vattu.gj by ShaRaHalf.gj;
		sub SsaHalf.gj Vattu.gj by SsaRaHalf.gj;
		sub SaHalf.gj Vattu.gj by SaRaHalf.gj;
		
} vatu_half1;


}vatu;

